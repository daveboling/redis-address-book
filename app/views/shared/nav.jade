.navbar.navbar-default(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(data-toggle='collapse', data-target='#bs-navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Express.js Template

    .collapse.navbar-collapse#bs-navbar-collapse
      ul.nav.navbar-nav.navbar-right
        -if(user)
          li: a(href='#')= user.email
          li: a(href='/addresses') Addresses
          li: a(href='/addresses/new') Add Address
          li
            form.navbar-form(method='post' action='/logout')
              .form-group
                input(type='hidden' name='_method' value='delete')
                button.btn.btn-danger Logout
        -else
          li: a(href='/login') Login
          li: a(href='/register') Register
          li: a(href='#') Welcome Guest!

